        <activity
            android:name=".controller.FavoritosActivity"
            android:label="@string/title_activity_favoritos"
            android:parentActivityName=".controller.FavoritosActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.expoagro.expoagrobrasil.controller.FavoritosActivity" />
        </activity>
        <activity
            android:name=".controller.ComentariosActivity"
            android:label="@string/title_activity_comentarios"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".controller.NovoComentarioActivity"
            android:label="Novo Comentário"
            android:parentActivityName=".controller.ComentariosActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.expoagro.expoagrobrasil.controller.ComentariosActivity" />
        </activity>
        <activity
