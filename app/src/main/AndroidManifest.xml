            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.expoagro.expoagrobrasil.controller.VisualizarMeusProdutosActivity" />
        </activity>
        <activity
            android:name=".controller.VisualizarMeuProdutoClicadoActivity"
            android:parentActivityName=".controller.VisualizarMeuProdutoClicadoActivity"
